@using PiotrWojcik.Restaurant.Models


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Menu</h3>
<table class="table table-striped">
    <tr>
       
        <th>Nazwa</th>
        <th>Cena</th>
        <th></th>
    </tr>
    @foreach (Dish dish in ViewBag.dishes)
    {
<tr>
    <td>@dish.Name</td>
    <td>@dish.Price</td>
    <td>
        <a href="@Url.Action("AddDishes", "Order", new { id = dish.Id})">Dodaj</a>
    </td>
</tr>
    }
</table>


